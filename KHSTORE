  <script>
   function goToPasswordPage() {
            document.getElementById('email-page').style.display = 'none';
            document.getElementById('password-page').style.display = 'block';
        }

        function goToProductsPage() {
            document.getElementById('password-page').style.display = 'none';
            document.getElementById('products-page').style.display = 'block';
        }

        function goToProfilePage() {
            document.getElementById('products-page').style.display = 'none';
            document.getElementById('profile-page').style.display = 'block';
        }

        function goToPaymentMethods() {
            document.getElementById('products-page').style.display = 'none';
            document.getElementById('payment-methods-page').style.display = 'block';
